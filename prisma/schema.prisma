generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id              Int      @id @default(autoincrement())
  slug            String   @unique
  title           String
  date            String
  summary         String
  releaseBatch    String   @map("release_batch")
  tags            String[]
  published       Boolean  @default(true)
  authors         String[]
  authorImages    String[]


  @@map("posts")
}

model Posting {
  id          Int      @id @default(autoincrement())
  slug        String   @unique
  postingName String   @map("posting_name")
  orgName     String   @map("org_name")
  address     String
  tags        String[]
  published   Boolean  @default(true)
  archived    Boolean  @default(false)
  postedDate  DateTime @default(now()) @map("posted_date")

  @@map("posting")
}
